{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"declaration": true,
		"sourceMap": true,
		"declarationDir": "dist/esm",
		"outDir": "dist/esm",
		"strict": true,
		"lib": [
			"dom",
			"esnext"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}